SetButton.Parent = MainFrame
SetButton.Size = UDim2.new(0.8, 0, 0, 30)
SetButton.Position = UDim2.new(0.1, 0, 0.45, 0)
SetButton.BackgroundColor3 = Color3.fromRGB(0, 150, 255)
SetButton.TextColor3 = Color3.fromRGB(255, 255, 255)
