--     
MinButton.Name = "MinButton"
MinButton.Parent = MainFrame
MinButton.Size = UDim2.new(0, 25, 0, 20)
MinButton.Position = UDim2.new(1, -25, 0, 0)
MinButton.BackgroundColor3 = Color3.fromRGB(40, 40, 45)
MinButton.TextColor3 = Color3.fromRGB(255, 255, 255)
MinButton.Text = "_"
MinButton.Font = Enum.Font.GothamBold

--      
Credits.Name = "Credits"
Credits.Parent = MainFrame
Credits.Size = UDim2.new(1, 0, 0, 20)
Credits.Position = UDim2.new(0, 0, 1, -20)
Credits.BackgroundTransparency = 1
Credits.TextColor3 = Color3.fromRGB(150, 150, 160)
Credits.Text = "TELGRAM~ @KK7HO " --     
Credits.Font = Enum.Font.Gotham
Credits.TextSize = 12

-- 
local speedEnabled = false
local customSpeed = 25
local minimized = false
local originalSize = MainFrame.Size
local minimizedSize = UDim2.new(0, 180, 0, 35)

--  
local function buttonHoverEffect(button)
    button.MouseEnter:Connect(function()
        game:GetService("TweenService"):Create(
            button,
            TweenInfo.new(0.2, Enum.EasingStyle.Quad, Enum.EasingDirection.Out),
            {BackgroundTransparency = 0.2}
        ):Play()
    end)
    
    button.MouseLeave:Connect(function()
        game:GetService("TweenService"):Create(
            button,
            TweenInfo.new(0.2, Enum.EasingStyle.Quad, Enum.EasingDirection.Out),
            {BackgroundTransparency = 0}
        ):Play()
    end)
end

buttonHoverEffect(SetButton)
buttonHoverEffect(ToggleButton)
buttonHoverEffect(MinButton)

--       
SetButton.MouseButton1Click:Connect(function()
    local newSpeed = tonumber(SpeedBox.Text)
    if newSpeed and newSpeed > 0 then
        if newSpeed > 10000000000000000 then
            newSpeed = 10000000000000000 --  
            SpeedBox.Text = "10000000000000000"
        end
        customSpeed = newSpeed
        if speedEnabled then
            humanoid.WalkSpeed = customSpeed
        end
    end
end)

--   
ToggleButton.MouseButton1Click:Connect(function()
    speedEnabled = not speedEnabled
    
    if speedEnabled then
        humanoid.WalkSpeed = customSpeed
        ToggleButton.BackgroundColor3 = Color3.fromRGB(50, 200, 50)
        ToggleButton.Text = ""
    else
        humanoid.WalkSpeed = 16 --  
        ToggleButton.BackgroundColor3 = Color3.fromRGB(200, 50, 50)
        ToggleButton.Text = " "
    end
end)

--   
MinButton.MouseButton1Click:Connect(function()
    minimized = not minimized
    
    if minimized then
        --   
        for _, child in ipairs(MainFrame:GetChildren()) do
            if child ~= Title and child ~= MinButton and child ~= Shadow then
                child.Visible = false
            end
        end
        MainFrame.Size = minimizedSize
        Title.Text = " : " .. tostring(customSpeed) .. " "
    else
   
        for _, child in ipairs(MainFrame:GetChildren()) do
            child.Visible = true
        end
        MainFrame.Size = originalSize
        Title.Text = "Developer ~ MIRZA"
    end
end)

--      
character:WaitForChild("Humanoid").Died:Connect(function()
    speedEnabled = false
    ToggleButton.BackgroundColor3 = Color3.fromRGB(200, 50, 50)
    ToggleButton.Text = " "
end)

--     
player.CharacterAdded:Connect(function(newCharacter)
    character = newCharacter
    humanoid = newCharacter:WaitForChild("Humanoid")
    
    humanoid.Died:Connect(function()
        speedEnabled = false
        ToggleButton.BackgroundColor3 = Color3.fromRGB(200, 50, 50)
        ToggleButton.Text = " "
    end)
end)


UserInputService.InputBegan:Connect(function(input, gameProcessed)
    if gameProcessed then return end
    
    if input.KeyCode == Enum.KeyCode.S and 
       UserInputService:IsKeyDown(Enum.KeyCode.LeftControl) and 
       UserInputService:IsKeyDown(Enum.KeyCode.LeftShift) then
        MainFrame.Visible = not MainFrame.Visible
    end
end)

print([[
    
     Ctrl+Shift+S / 
]])

